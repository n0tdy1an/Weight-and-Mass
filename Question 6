#include <iostream>

using namespace std;

int main()
{
   float weight;
   float mass;
   cout << "Enter mass here" << endl;
    cin>>mass;
    weight = mass * 9.8;
    if (weight > 1000)
    cout << " The object is too heavy" << endl;
    if (weight < 10)
    cout << " The object is too light " << endl;
    weight = mass * 9.8;
    cout<<weight<< "Newtons"<< endl;

   return 0;
}

